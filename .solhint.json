{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": "off",
    "func-order": "off",
    "func-visibility": [
      "warn",
      { "ignoreConstructors": true }
    ],
    "max-line-length": "off",
    "not-rely-on-time": "warn",
    "avoid-throw": "warn",
    "reason-string": "warn",
    "no-unused-vars": "warn"
  }
}
